<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/btBorrarSD"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="#6D226D"
            android:backgroundTintMode="add"
            app:icon="@drawable/papelera"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvNombreSalon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvIdSalonRV"
            app:layout_constraintTop_toTopOf="@+id/tvNombreSalon" />

        <Button
            android:id="@+id/btEditarSD"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="#6D226D"
            app:icon="@drawable/editar"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvAforoSalon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvIdSalonRV"
            app:layout_constraintTop_toTopOf="@+id/tvAforoSalon" />

        <TextView
            android:id="@+id/tvIdSalonRV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombreSalon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/btBorrarSD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIdSalonRV" />

        <TextView
            android:id="@+id/tvAforoSalon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/btEditarSD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreSalon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>