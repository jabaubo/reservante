<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etClienteRD"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:hint="@string/dialogo_nombre_apellidos"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/etTlfRD"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:hint="@string/dialogo_telefono"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/etEmailRD"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:hint="@string/dialogo_email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/etComensalesRD"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:hint="@string/dialogo_comensales"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/etObservacionesRD"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:hint="@string/dialogo_observaciones"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btBorrarDialog"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_nombre_apellidos"
        app:layout_constraintBottom_toTopOf="@+id/etClienteRD"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_telefono"
        app:layout_constraintBottom_toTopOf="@+id/etTlfRD"
        app:layout_constraintTop_toBottomOf="@+id/etClienteRD"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_email"
        app:layout_constraintBottom_toTopOf="@+id/etEmailRD"
        app:layout_constraintTop_toBottomOf="@+id/etTlfRD"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_comensales"
        app:layout_constraintBottom_toTopOf="@+id/etComensalesRD"
        app:layout_constraintTop_toBottomOf="@+id/etEmailRD"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_salon"
        app:layout_constraintBottom_toTopOf="@+id/sSalones"
        app:layout_constraintTop_toBottomOf="@+id/etComensalesRD"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_observaciones"
        app:layout_constraintBottom_toTopOf="@+id/etObservacionesRD"
        app:layout_constraintTop_toBottomOf="@+id/sSalones"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btCorreoDialog"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        app:icon="@drawable/correo"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btLlamarDialog"
        app:layout_constraintTop_toBottomOf="@+id/etObservacionesRD"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btBorrarDialog"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        app:icon="@drawable/papelera"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btCorreoDialog"
        app:layout_constraintTop_toBottomOf="@+id/etObservacionesRD"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btLlamarDialog"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/telefono"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etObservacionesRD"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="61dp" />

    <Spinner
        android:id="@+id/sSalones"
        android:layout_width="411dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="#FFFFBB33"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/logo_nombre_oscuro"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>