<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvNombreVacacionesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tvInicioVacaciones2" />

        <Button
            android:id="@+id/btFechaInicio2"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:width="60dp"
            android:backgroundTint="#6D226D"
            app:icon="@drawable/calendario"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvFechaInicioLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvFechaInicioLayout"
            app:layout_constraintTop_toTopOf="@+id/tvFechaInicioLayout" />

        <TextView
            android:id="@+id/tvInicioVacaciones2"
            android:layout_width="158dp"
            android:layout_height="21dp"
            android:text="@string/fecha_inicio"
            app:layout_constraintStart_toStartOf="@+id/tvFechaInicioLayout"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreVacacionesLayout" />

        <TextView
            android:id="@+id/tvInicioVacaciones4"
            android:layout_width="158dp"
            android:layout_height="21dp"
            android:text="@string/fecha_fin"
            app:layout_constraintStart_toStartOf="@+id/tvFechaFinLayout"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioLayout" />

        <TextView
            android:id="@+id/tvFechaInicioLayout"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:elegantTextHeight="true"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/tvInicioVacaciones4"
            app:layout_constraintTop_toBottomOf="@+id/tvInicioVacaciones2" />

        <TextView
            android:id="@+id/tvFechaFinLayout"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:elegantTextHeight="true"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/tvInicioVacaciones4" />

        <Button
            android:id="@+id/btFechaFin2"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:backgroundTint="#6D226D"
            app:icon="@drawable/calendario"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvFechaFinLayout"
            app:layout_constraintTop_toTopOf="@+id/tvFechaFinLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>